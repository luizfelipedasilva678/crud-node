<%- include('./includes/head.ejs') %>

<main>
    <section class="container">
        <h1>Edit your contact</h1>

        <form action="/contacts/edit"  method="POST"> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <input type="hidden" name="id" value="<%= id %>">
            
            <label for="textinput">Name</label>  
            <input id="textinput" name="name" type="text" placeholder="Enter name here"  value="<%= name %>"> 
            
            <label for="surname">Surname</label>  
            <input id="surname" name="surname" type="text" placeholder="Enter surname here" value="<%= surname %>">   
            
            <label  for="email">E-mail</label>  
            <input id="email" name="email" type="text" placeholder="Enter e-mail here" value="<%= email %>">      
            
            <label  for="phone">Phone</label>  
            <input id="phone" name="phone" type="text" placeholder="Enter name here" value="<%= phone %>"> 
            
            <button>Send</button>
        </form>
    </section>
</main>

