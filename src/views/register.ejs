<%- include('./includes/head.ejs') %>
<%- include('./includes/header.ejs') %>

<main>
    <section class="container">
        <h1>Register your contact</h1>

        <form action="/contacts/register"  method="POST"> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <label for="textinput">Name</label>  
            <input id="textinput" name="name" type="text" placeholder="Enter name here" pattern="^[A-Za-z]+$" required> 
            
            <label for="surname">Surname</label>  
            <input id="surname" name="surname" type="text" placeholder="Enter surname here" pattern="^[A-Za-z]+$" required>   
            
            <label for="email">E-mail</label>  
            <input id="email" name="email" type="email" placeholder="Enter e-mail here" required>      
            
            <label for="phone">Phone</label>  
            <input id="phone" name="phone" type="tel" placeholder="Enter name here" pattern="[0-9]{4}-[0-9]{4}" required> 
            
            <button>Send</button>
        </form>
    </section>
</main>

