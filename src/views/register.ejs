<%- include('./includes/head.ejs') %>

<main>
    <section class="container">
        <h1>Register your contact</h1>

        <form action="/contacts/register"  method="POST"> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <label for="textinput">Name</label>  
            <input id="textinput" name="name" type="text" placeholder="Enter name here"> 
            
            <label for="surname">Surname</label>  
            <input id="surname" name="surname" type="text" placeholder="Enter surname here">   
            
            <label for="email">E-mail</label>  
            <input id="email" name="email" type="text" placeholder="Enter e-mail here">      
            
            <label for="phone">Phone</label>  
            <input id="phone" name="phone" type="text" placeholder="Enter name here"> 
            
            <button>Send</button>
        </form>
    </section>
</main>

